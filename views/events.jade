.col-xl-3.col-lg-3.col-md-6.col-sm-12.col-12(style="height:200px")
    .card(style="height:80%;align-items:center;display: table; width:100%")
        .card-body(style="align-items: center;vertical-align: middle;line-hight:30%;display: table-cell")
            .event_id
                h5.mb-1(style="text-align: center;") #{val.id}
            .event_date
                h3.text-muted(style="line-hight:30%;height:30%;display: block") #{val.start_year}/#{val.start_month}/#{val.start_day}
                h3.text-muted(style="line-hight:30%;height:30%;display: block") #{val.end_year}/#{val.end_month}/#{val.end_day}
            .event_contents
                h2.mb-1 #{val.contents}
